  unlet scenarios

Execute (ParseDue (date&time)):
  let scenarios = [
    \ [':155:15',      1526396400, '15/05/18 15:00'],
    \ [':160719:1821', 1563301260, '16/07/19 18:21'],
    \ [':1406:1420',   1528986000, '14/06/18 14:20'],
    \ [':1001:1001',   1547114460, '10/01/19 10:01'],
    \ [':100118:1001',    'throw', '10/01/18 10:01'],
  \]

Then (should parse time (date ref: 15/05/18 15:15 UTC)):
  for [due, expected; comment] in scenarios
    if expected == 'throw'
      AssertThrow kronos#datetime#ParseDue(1526390100, due)
    else
      AssertEqual expected, kronos#datetime#ParseDue(1526390100, due)
    endif
  endfor
  unlet scenarios

#------------------------------------------------------------------------# Add #

Execute (Add):
  call kronos#cli#Add(g_database, g_dateref, 'test')

Then (should add basic new task):
  AssertEqual
    \ [{'id': 1, 'desc': 'test', 'tags': [], 'due': 0}],
    \ kronos#database#ReadTasks(g_database)

Execute:
  call kronos#cli#Add(g_database, g_dateref, '+cli test +a +b-c')

Then (should add new task with tags):
  AssertEqual
    \ [{'id': 1, 'desc': 'test', 'tags': ['cli', 'a', 'b-c'], 'due': 0}],
    \ kronos#database#ReadTasks(g_database)

Execute:
  call kronos#cli#Add(g_database, g_dateref, 'test :16 42')

Then (should add new task with due):
  AssertEqual
    \ [{'id': 1, 'desc': 'test 42', 'tags': [], 'due': 1526428800}],
    \ kronos#database#ReadTasks(g_database)

