# ---------------------------------------------------------------- # Parse due #

Execute (Parse due (date)):
  let scenarios = [
    \[':15'    , 1526342400000, '15/05/18 00:00'],
    \[':10'    , 1528588800000, '10/06/18 00:00'],
    \[':20'    , 1526774400000, '20/06/18 00:00'],
    \[':153'   , 1552608000000, '15/03/19 00:00'],
    \[':102'   , 1549756800000, '10/02/19 00:00'],
    \[':201'   , 1547942400000, '20/01/19 00:00'],
    \[':158'   , 1534291200000, '15/08/18 00:00'],
    \[':108'   , 1533859200000, '10/08/18 00:00'],
    \[':2010'  , 1539993600000, '20/10/18 00:00'],
    \[':140117', 'throw'      , '14/01/17 00:00'],
  \]

Then (should parse date):
  for [due, date; _] in scenarios
    if date == 'throw'
      AssertThrow kronos#utils#parse_due(g_date_ref, due)
    else
      AssertEqual date, kronos#utils#parse_due(g_date_ref, due)
    endif
  endfor

